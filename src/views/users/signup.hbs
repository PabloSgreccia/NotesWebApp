<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            Account Register
        </div>
        <div class="card-body">
            <form action="/users/signup" method="POST">
                <div class="form-group">
                    {{#if name}}
                        <input type="text" class="form-control" placeholder="User Name" name="name" value="{{name}}">
                    {{else}}
                        <input type="text" class="form-control" placeholder="User Name" name="name">
                    {{/if}}
                </div>
                <div class="form-group pt-2">
                    {{#if email}}
                        <input type="email" class="form-control" placeholder="Email" name="email" value="{{email}}">
                    {{else}}
                        <input type="email" class="form-control" placeholder="Email" name="email">
                    {{/if}}
                </div>
                <div class="form-group pt-2">
                    {{#if pwd}}
                        <input type="password" class="form-control" placeholder="Password" name="pwd" value="{{pwd}}">
                    {{else}}
                        <input type="password" class="form-control" placeholder="Password" name="pwd">
                    {{/if}}
                </div>
                <div class="form-group pt-2">
                    {{#if confirmPwd}}
                        <input type="password" class="form-control" placeholder="Repeat Password" name="confirmPwd" value="{{confirmPwd}}"> 
                    {{else}}
                        <input type="password" class="form-control" placeholder="Repeat Password" name="confirmPwd"> 
                    {{/if}}
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-primary col-12" type="submit">Create Account</button>
                </div>
                {{#if message}}
                <div class="container mt-2" id="empty-input">
                    {{message}}
                </div>
                {{/if}}
            </form>
        </div>
    </div>
</div>