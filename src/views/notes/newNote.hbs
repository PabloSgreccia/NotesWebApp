<div class="modal fade" id="edit-note-modal" tabindex="-1" role="dialog" aria-labelledby="edit-note-modal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><b>Edit Note</b></h5>
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"></span>
                </button>
            </div>
        <div class="modal-body" id="modal-body">
            <form action="/notes/editNote" method="POST">
                <div class="form-group">
                    <input type="text" name="titleEdit" class="form-control modifiedNoteAttribute" id="title-edit" placeholder="Title">
                </div>
                <div class="form-group pt-2">
                    <textarea type="text" name="descriptionEdit" class="form-control modifiedNoteAttribute" id="description-edit" placeholder="Description" rows="3"></textarea>
                </div>
                <input type="hidden" name="noteIdEdit" id="note-id-edit" hidden>
                <div class="form-group pt-2">
                    <button class="btn btn-primary col-12" type="submit" id="submit-note-modal">
                        Save
                    </button>
                </div>
            </form>
        </div>
        </div>
    </div>
</div>

