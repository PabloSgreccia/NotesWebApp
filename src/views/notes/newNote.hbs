<div class="col-md-3" id="new-note-form">
    <div class="card">
        <div class="card-header">New Note</div>
        <div class="card-body" id="card-form">
            <form action="/notes/newNote" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control newNoteAttribute" placeholder="Title" autofocus>
                </div>
                <div class="form-group pt-2">
                    <textarea type="text" name="description" class="form-control newNoteAttribute" placeholder="Description" rows="3"></textarea>
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-primary col-12" type="submit" id="submit-note">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- List of notes -->
<!-- List of notes -->
<!-- List of notes -->

<div class="col-md-8" id="notes-list">
    <div class="row">
        {{#if notes}}
            {{#each notes}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <b id="note-title">{{title}}</b>
                    </div>
                    <div class="card-body">
                        <p id="note-description">{{description}}</p>
                        <div class="d-flex flex-row-reverse align-items-center">
                            <a href="/notes/deleteNote/{{_id}}" class="btn btn-danger btn-delete-note btn-sm col-2">
                                <i class="bi bi-trash"></i>
                            </a>
                            <a class="btn btn-primary btn-edit-note btn-sm col-2 mx-1" data-toggle="modal" data-target="#edit-note-modal">
                                <i class="bi bi-pencil-square img-edit-note"></i>
                            </a>
                            <span id="note-id" hidden>{{_id}}</span>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        {{else}}
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <b id="note-title username-note">Hi {{userName}}</b>
                    </div>
                    <div class="card-body">
                        <p id="note-description">You don't have any notes.</p>
                    </div>
                </div>
            </div>
        {{/if}}
    </div>
</div>

