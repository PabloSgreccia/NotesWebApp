<div id="AppForm" class="row pt-3"> 
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4>Create a Task</h4>
            </div>
            <form  action="/tasks/newTask" method="post" id="task-form" class="card-body" >
                <div class="row">
                    <div class="form-group col-md-10">
                        <input type="text" id="taskDescription" placeholder="Task Description" class="form-control bg-light" name="description">
                    </div>
                    <div class="form-group col-md-2">
                        <input type="submit" value="Add" class="btn btn-primary w-100">                            
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr>
<!-- Tasks list -->
<div id="AppTasksList" class="row pt-3">
    <div id="taskListHeader" class="row align-items-center pb-4 px-3" style="display: none;" >
        <div class="col-8 text-center">
            <strong>Task Description</strong>                   
        </div>
        <div class="col-3 text-center">
            <strong>Creation date</strong>
        </div>
        <div class="col-1"></div>
    </div>    
</div>
{{#each tasks}}
    <div class="draggable" draggable>
        <div class="card mb-2">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-8">
                        <span class="taskDescription">{{description}}</span>                    
                    </div>
                    <div class="col-3 text-center">
                        <span class="taskTime">{{date}}</span>
                    </div>
                    <div class="col-1 text-center">
                        <a href="#" class="btn btn-danger" name="deleteA">
                            <i class="bi bi-trash" name="deleteI"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/each}}
    
<div id="tasks-list" class="col"></div>


<script src="/scripts/taskManager.js"></script>