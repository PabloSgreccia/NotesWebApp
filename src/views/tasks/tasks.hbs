<div id="AppForm" class="row pt-3"> 
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h4>Create a Task</h4>
            </div>
            <form  action="/tasks/newTask" method="post" id="task-form" class="card-body" >
                <div class="row">
                    <div class="form-group col-md-10">
                        <input type="text" id="taskDescription" placeholder="Task Description" class="form-control bg-light" name="description" maxlength="500">
                    </div>
                    <div class="form-group col-md-2">
                        <input type="submit" value="Add" class="btn btn-primary w-100">                            
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<hr>
<!-- Tasks list -->
{{#each tasks}}
    <div class="card mb-2 card-task" >
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-8">
                    <span class="taskDescription">{{description}}</span>                    
                </div>
                <div class="col-3 text-center">
                    <span class="taskTime">{{date}}</span>
                </div>
                <div class="col-1 text-center">
                <a href="/tasks/deleteTask/{{_id}}" class="btn btn-danger btn-delete-note">
                    <i class="bi bi-trash task-delete-icon"></i>
                </a>
                </div>
                <span hidden>{{_id}}</span>
            </div>
        </div>
    </div>
{{/each}}
    
<div id="tasks-list" class="col"></div>


<script src="/toastr/toastr.min.js"></script>
<script src="/scripts/toastrValidator.js"></script>
<script src="/scripts/taskValidator.js"></script>